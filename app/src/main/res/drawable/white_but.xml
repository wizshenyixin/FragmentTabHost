<?xml version="1.0" encoding="utf-8"?>
    <layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <!--边框颜色-->
          <item >
            <shape>
                <solid android:color="#c6c6c6"/>
                <corners android:radius="10px"/>
            </shape>
          </item>
<!--主体背景颜色值-->
<item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px">
  <shape>
    <gradient android:type="linear" android:angle="90" android:centerX="0.5" android:centerY="0.5"
        android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff"/>

      <padding android:top="2px" android:bottom="2px" android:left="2px" android:right="2px"/>
      <!--圆角-->
      <corners android:radius="10px"/>
  </shape>



</item>
</layer-list>